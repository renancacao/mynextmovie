<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@drawable/selector_text</item>
        <item name="android:colorBackground">@color/fundo_main</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:itemBackground">@color/vermelhoClaro</item>
        <item name="android:popupMenuStyle">@color/vermelhoClaro</item>
    </style>

    <style name="PreferenceTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>


</resources>
